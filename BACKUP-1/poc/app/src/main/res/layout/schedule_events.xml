<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-26dp">

        <LinearLayout
            android:id="@+id/nameinfo"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:padding="30dp"
            android:textAlignment="center">

            <TextView
                android:id="@+id/greetings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calendário de eventos"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textbeforetableone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:paddingStart="18dp"
                        android:text="Proximo evento:"
                        android:textAlignment="textStart" />


                </LinearLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="248dp"
                    android:layout_marginTop="8dp"
                    android:padding="16dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#B95555">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="Campeonato municipal"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/back1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#E8E8EC"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">


                        <TextView
                            android:id="@+id/textViewtitle1"
                            android:layout_width="148dp"
                            android:layout_height="wrap_content"
                            android:text="Eleminatórias"
                            android:textAlignment="center"
                            android:textColor="#070707" />

                        <TextView
                            android:id="@+id/textViewdata1"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="08/11/24"
                            android:textAlignment="center"
                            android:textColor="#070707" />

                        <TextView
                            android:id="@+id/textViewhour1"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="19:00"
                            android:textColor="#070707" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/back2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        android:background="#E8E8EC"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">


                        <TextView
                            android:id="@+id/textViewtitle2"
                            android:layout_width="148dp"
                            android:layout_height="wrap_content"
                            android:text="Quartas de final"
                            android:textAlignment="center"
                            android:textColor="#070707" />

                        <TextView
                            android:id="@+id/textViewdata2"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="15/11/24"
                            android:textAlignment="center"
                            android:textColor="#070707" />

                        <TextView
                            android:id="@+id/textViewhour2"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="20:00"
                            android:textColor="#070707" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/back3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        android:background="#E8E8EC"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">


                        <TextView
                            android:id="@+id/textViewtitle3"
                            android:layout_width="148dp"
                            android:layout_height="wrap_content"
                            android:text="Semi final"
                            android:textAlignment="center"
                            android:textColor="#070707" />

                        <TextView
                            android:id="@+id/textViewdata3"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="19/11/24"
                            android:textAlignment="center"
                            android:textColor="#070707" />

                        <TextView
                            android:id="@+id/textViewhour3"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="20:00"
                            android:textColor="#070707" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/back4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        android:background="#E8E8EC"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">


                        <TextView
                            android:id="@+id/textViewtitle4"
                            android:layout_width="148dp"
                            android:layout_height="wrap_content"
                            android:text="Final"
                            android:textAlignment="center"
                            android:textColor="#070707" />

                        <TextView
                            android:id="@+id/textViewdata4"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="22/11/24"
                            android:textAlignment="center"
                            android:textColor="#070707" />

                        <TextView
                            android:id="@+id/textViewhour4"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="20:00"
                            android:textColor="#070707" />

                    </TableRow>

                </TableLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"></LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textbeforetablethree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:paddingStart="18dp"
                    android:text="Eventos já disputados"
                    android:textAlignment="textStart" />

            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="8dp"
                android:padding="16dp">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#B95555">

                    <TextView
                        android:id="@+id/textViewa"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="   "
                        android:textAlignment="center"
                        android:textColor="#FFFFFF" />


                </TableRow>

                <TableRow
                    android:id="@+id/back5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:background="#E8E8EC"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">


                    <TextView
                        android:id="@+id/textViewtitle5"
                        android:layout_width="148dp"
                        android:layout_height="wrap_content"
                        android:text="Liga Basket 2023"
                        android:textAlignment="center"
                        android:textColor="#070707" />

                    <TextView
                        android:id="@+id/textViewhour6"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text="Resultado: Derrota"
                        android:textColor="#070707"
                        android:textAlignment="center"/>

                </TableRow>

            </TableLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="mostrar mais"
                android:textAlignment="textEnd"
                android:textColor="#3599C7"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="346dp"
            android:orientation="vertical"
            android:padding="30dp">

            <Button
                android:id="@+id/backtohome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:height="72dp"
                android:background="#B95555"
                android:text="Voltar a tela principal"
                android:theme="@null"
                app:backgroundTint="@null"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>